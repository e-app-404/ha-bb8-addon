+disallow_incomplete_defs = False
+exclude = (?x)(
+    ^\\.venv/|
+    ^\\.tox/|
+    ^build/|
+    ^dist/|
+    ^beep_boop_bb8/__pycache__/|
+    ^beep_boop_bb8/tests/.__
+)
+
+[mypy-beep_boop_bb8.*]
+implicit_reexport = True
